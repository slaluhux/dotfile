# My cwm config

fontname "xos4 Terminus:pixelsize=12"
command term "sakura"
borderwidth 2
gap 2 2 2 2

sticky yes

unbind-key all
unbind-mouse all

bind-key M-Return terminal
bind-key M-d menu-exec
bind-key CM-c window-delete
bind-key CM-r restart
bind-key CM-q quit
bind-key CM-f window-fullscreen
bind-key CM-m window-maximize

bind-key CM-1 group-toggle-1
bind-key M-1 group-only-1
bind-key MS-1 window-movetogroup-1
bind-key CM-2 group-toggle-2
bind-key M-2 group-only-2
bind-key MS-2 window-movetogroup-2
bind-key CM-3 group-toggle-3
bind-key M-3 group-only-3
bind-key MS-3 window-movetogroup-3
bind-key CM-4 group-toggle-4
bind-key M-4 group-only-4
bind-key MS-4 window-movetogroup-4
bind-key CM-5 group-toggle-5
bind-key M-5 group-only-5
bind-key MS-5 window-movetogroup-5
bind-key CM-6 group-toggle-6
bind-key M-6 group-only-6
bind-key MS-6 window-movetogroup-6
bind-key CM-7 group-toggle-7
bind-key M-7 group-only-7
bind-key MS-7 window-movetogroup-7
bind-key CM-8 group-toggle-8
bind-key M-8 group-only-8
bind-key MS-8 window-movetogroup-8
bind-key CM-9 group-toggle-9
bind-key M-9 group-only-9
bind-key MS-9 window-movetogroup-9

bind-key M-n group-cycle
bind-key M-p group-rcycle

bind-key M-f window-cycle
bind-key M-b window-rcycle

bind-key MS-h window-move-left
bind-key M-h window-move-left-big
bind-key MS-j window-move-down
bind-key M-j window-move-down-big
bind-key MS-k window-move-up
bind-key M-k window-move-up-big
bind-key MS-l window-move-right
bind-key M-l window-move-right-big

bind-key CM-h window-resize-left-big
bind-key CM-j window-resize-down-big
bind-key CM-k window-resize-up-big
bind-key CM-l window-resize-right-big
